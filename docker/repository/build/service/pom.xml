<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.edu_sharing</groupId>
    <artifactId>edu_sharing-community-deploy-docker-repository-build</artifactId>
    <version>git</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>edu_sharing-community-deploy-docker-repository-build-service</artifactId>
  <packaging>jar</packaging>

  <name>edu_sharing-community-deploy-docker-repository-build-service</name>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>

          <execution>
            <id>artifacts</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                alfresco-content-services-share-distribution,
                alfresco-pdf-renderer,
                alfresco-platform-community-distributionzip,
                edu_sharing-community-repository-backend-tomcat,
                edu_sharing-community-repository-config,
                edu_sharing-community-repository-webapp,
                jmx_prometheus_javaagent,
                postgresql,
                redisson-all,
                redisson-tomcat-8
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/artifacts</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>community-alfresco</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-backend-alfresco-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/alfresco/0</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>plugin-alfresco</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-plugin-mongo-backend-alfresco-module,
                edu_sharing-enterprise-repository-plugin-cluster-backend-alfresco-module,
                edu_sharing-enterprise-repository-plugin-remote-backend-alfresco-module,
                edu_sharing-enterprise-repository-plugin-transform-backend-alfresco-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/alfresco/1</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>plugin-edu-sharing</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-plugin-mongo-backend-services-module,
                edu_sharing-enterprise-repository-plugin-cluster-backend-services-module,
                edu_sharing-enterprise-repository-plugin-remote-backend-services-module,
                edu_sharing-enterprise-repository-plugin-transform-backend-services-module
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/amps/edu-sharing/1</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>plugin-config</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-plugin-mongo-config
              </includeArtifactIds>
              <excludes>META-INF/**</excludes>
              <outputDirectory>${project.build.directory}/build/plugins/configuration</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>plugin-docker</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-plugin-mongo-deploy-docker-build-service,
                edu_sharing-enterprise-repository-plugin-transform-deploy-docker-build-service
              </includeArtifactIds>
              <excludes>META-INF/**</excludes>
              <outputDirectory>${project.build.directory}/build/plugins/docker</outputDirectory>
            </configuration>
          </execution>

          <execution>
            <id>rest-api</id>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <includeArtifactIds>
                edu_sharing-community-repository-backend-services-rest-api
              </includeArtifactIds>
              <outputDirectory>${project.build.directory}/build/rest-api</outputDirectory>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <images>
            <image>
              <name>${docker.repository}/edusharing-repository-service:${docker.tag}</name>
            </image>
          </images>
        </configuration>
        <executions>
          <execution>
            <id>build</id>
            <goals>
              <goal>build</goal>
            </goals>
            <phase>install</phase>
          </execution>
          <execution>
            <id>push</id>
            <goals>
              <goal>push</goal>
            </goals>
            <phase>deploy</phase>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <phase>verify</phase>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

  <dependencies>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-content-services-share-distribution</artifactId>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-pdf-renderer</artifactId>
      <type>tgz</type>
      <classifier>linux</classifier>
    </dependency>

    <dependency>
      <groupId>org.alfresco</groupId>
      <artifactId>alfresco-platform-community-distributionzip</artifactId>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-backend-alfresco-module</artifactId>
      <type>amp</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-backend-services-rest-api</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-backend-tomcat</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-config</artifactId>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>edu_sharing-community-repository-webapp</artifactId>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>io.prometheus.jmx</groupId>
      <artifactId>jmx_prometheus_javaagent</artifactId>
    </dependency>

    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
    </dependency>

    <dependency>
      <groupId>org.redisson</groupId>
      <artifactId>redisson-all</artifactId>
    </dependency>

    <dependency>
      <groupId>org.redisson</groupId>
      <artifactId>redisson-tomcat-8</artifactId>
    </dependency>

  </dependencies>

  <profiles>

    <profile>

      <id>plugin.cluster</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_CLUSTER_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-cluster-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-cluster-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

      </dependencies>

    </profile>

    <profile>

      <id>plugin.mongo</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_MONGO_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-community-repository-plugin-mongo-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-community-repository-plugin-mongo-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-community-repository-plugin-mongo-config</artifactId>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-community-repository-plugin-mongo-deploy-docker-build-service</artifactId>
          <classifier>sources</classifier>
        </dependency>

      </dependencies>

    </profile>

    <profile>

      <id>plugin.remote</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_REMOTE_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-remote-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-remote-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

      </dependencies>

    </profile>

    <profile>

      <id>plugin.transform</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.PLUGIN_TRANSFORM_ENABLED</name>
          <value>true</value>
        </property>
      </activation>

      <dependencies>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-transform-backend-alfresco-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-transform-backend-services-module</artifactId>
          <type>amp</type>
        </dependency>

        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>edu_sharing-enterprise-repository-plugin-transform-deploy-docker-build-service</artifactId>
          <classifier>sources</classifier>
        </dependency>

      </dependencies>

    </profile>

  </profiles>

</project>
