<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.edu_sharing</groupId>
    <artifactId>edu_sharing-community-parent</artifactId>
    <version>develop-SNAPSHOT</version>
    <relativePath/>
  </parent>

  <artifactId>edu_sharing-community</artifactId>
  <packaging>pom</packaging>
  <version>git</version>

  <name>edu_sharing-community</name>

  <scm>
    <connection>scm:git:https://scm.edu-sharing.com/edu-sharing-community/edu-sharing-community.git</connection>
    <developerConnection>scm:git:https://scm.edu-sharing.com/edu-sharing-community/edu-sharing-community.git</developerConnection>
    <url>https://scm.edu-sharing.com/edu-sharing-community/edu-sharing-community.git</url>
  </scm>

  <properties>

    <community.plattform>${project.version}</community.plattform>

    <maven.deploy.releases>https://artifacts.edu-sharing.com/repository/community-releases/</maven.deploy.releases>
    <maven.deploy.snapshots>https://artifacts.edu-sharing.com/repository/community-snapshots/</maven.deploy.snapshots>

  </properties>

  <build>

    <plugins>

      <plugin>
        <groupId>io.reformanda.semper</groupId>
        <artifactId>dependencyversion-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>set-version</goal>
            </goals>
            <phase>validate</phase>
          </execution>
        </executions>

      </plugin>

    </plugins>

  </build>

  <dependencyManagement>

    <dependencies>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-bom</artifactId>
        <version>${community.plattform}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_elasticsearch</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_postgresql</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_rediscluster</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_rendering</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_rendering_service</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_repository</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_repository_search_elastic_tracker</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_repository_search_solr4</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-helm-edusharing_repository_service</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-rendering-compose</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>edu_sharing-community-deploy-docker-repository-compose</artifactId>
        <version>${project.version}</version>
      </dependency>

    </dependencies>

  </dependencyManagement>

  <repositories>

    <repository>
      <id>edu-sharing.public.releases</id>
      <url>https://artifacts.edu-sharing.com/repository/public-releases/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>edu-sharing.public.snapshots</id>
      <url>https://artifacts.edu-sharing.com/repository/public-snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>

    <repository>
      <id>edu-sharing.plugin.remote.releases</id>
      <url>https://artifacts.edu-sharing.com/repository/plugin-remote-releases/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>edu-sharing.plugin.remote.snapshots</id>
      <url>https://artifacts.edu-sharing.com/repository/plugin-remote-snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>

  </repositories>

  <distributionManagement>

    <repository>
      <id>maven.deploy.releases</id>
      <url>${maven.deploy.releases}</url>
    </repository>

    <snapshotRepository>
      <id>maven.deploy.snapshots</id>
      <url>${maven.deploy.snapshots}</url>
    </snapshotRepository>

  </distributionManagement>

<modules>  <module>deploy</module>
  </modules>
</project>
