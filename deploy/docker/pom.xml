<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.edu_sharing</groupId>
    <artifactId>edu_sharing-community-deploy</artifactId>
    <version>git</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>edu_sharing-community-deploy-docker</artifactId>
  <packaging>pom</packaging>

  <name>edu_sharing-community-deploy-docker</name>

  <properties>

    <docker.from.apache.exporter>docker.io/bitnami/apache-exporter:0.10.1</docker.from.apache.exporter>
    <docker.from.apache.server>docker.io/php:7.3-apache</docker.from.apache.server>
    <docker.from.elasticsearch.exporter>quay.io/prometheuscommunity/elasticsearch-exporter:v1.3.0</docker.from.elasticsearch.exporter>
    <docker.from.elasticsearch.server>docker.elastic.co/elasticsearch/elasticsearch:7.15.1</docker.from.elasticsearch.server>
    <docker.from.minideb>docker.io/bitnami/minideb:buster</docker.from.minideb>
    <docker.from.openjdk>docker.io/openjdk:8-jdk-buster</docker.from.openjdk>
    <docker.from.postgresql.exporter>quay.io/prometheuscommunity/postgres-exporter:v0.10.0</docker.from.postgresql.exporter>
    <docker.from.postgresql.server>docker.io/bitnami/postgresql:13.4.0</docker.from.postgresql.server>
    <docker.from.redis.exporter>docker.io/bitnami/redis-exporter:1.29.0</docker.from.redis.exporter>
    <docker.from.redis.server>docker.io/bitnami/redis:6.2.6</docker.from.redis.server>
    <docker.from.rediscluster.server>docker.io/bitnami/redis-cluster:6.2.6</docker.from.rediscluster.server>
    <docker.from.tomcat>docker.io/tomcat:${repository.tomcat.version}-jdk8</docker.from.tomcat>

    <rendering.redis.client.version>5.3.2</rendering.redis.client.version>

    <repository.prometheus.agent.version>0.14.0</repository.prometheus.agent.version>
    <repository.redis.client.version>3.16.4</repository.redis.client.version>

  </properties>

  <profiles>

    <profile>

      <id>docker-build-timestamp</id>

      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>env.DOCKER_BUILD_TIMESTAMP</name>
          <value>true</value>
        </property>
      </activation>

      <properties>

        <docker.tag>${project.version}-${build.timestamp}</docker.tag>

      </properties>

    </profile>

  </profiles>

<modules>  <module>build</module>
    <module>compose</module>
    <module>helm</module>
    <module>rendering</module>
    <module>repository</module>
  </modules>
</project>
