{
  "name": "angular-edusharing",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "angular-cli": {},
  "scripts": {
    "prestart": "npm run build:edu-sharing-api:dev",
    "start": "ng serve",
    "start-public": "ng serve --host 0.0.0.0 --disable-host-check",
    "serve-dist": "node scripts/server.js",
    "build:edu-sharing-api": "(cd projects/edu-sharing-api && npm run update-if-needed) && node --max_old_space_size=2048 ./node_modules/@angular/cli/bin/ng build edu-sharing-api",
    "build:edu-sharing-api:dev": "(cd projects/edu-sharing-api && npm run update-if-needed) && node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build edu-sharing-api --configuration development",
    "publish:edu-sharing-api": "npm run build:edu-sharing-api && cd dist/edu-sharing-api && npm publish",
    "prebuild": "npm run build:edu-sharing-api",
    "build": "node --max_old_space_size=2048 ./node_modules/@angular/cli/bin/ng build --configuration production --delete-output-path false --base-href /edu-sharing/",
    "prebuild-dev": "npm run build:edu-sharing-api:dev",
    "build-dev": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build --delete-output-path false --base-href /edu-sharing/",
    "check:lint": "ng lint --max-warnings=835",
    "fix:lint": "ng lint --fix",
    "check:format": "prettier --check src projects/*/src",
    "fix:format": "prettier --write src projects/*/src",
    "test": "ng test",
    "test-ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "pree2e": "rm -rf playwright/out && tsc --incremental -p tests/tsconfig.json",
    "e2e": "playwright test",
    "e2e-watch-compile": "rm -rf playwright/out && tsc --watch -p tests/tsconfig.json",
    "e2e-prepare-edu-sharing": "rm -f playwright/storage/*.json && ts-node --esm tests/scripts/prepare-edu-sharing.mts",
    "test:edu-sharing-frontend": "ng test angular-edusharing",
    "test:edu-sharing-api": "ng test edu-sharing-api",
    "docs": "typedoc --mode file --experimentalDecorators --excludePrivate --ignoreCompilerErrors --target 'ES6' --module 'commonjs' --out docs src",
    "print-licenses": "node licenses.js",
    "start-storybook": "start-storybook -p 4300 -s ./src/assets",
    "build-storybook": "build-storybook -s ./src/assets",
    "postinstall": "ngcc --async=false",
    "prepare": "cd .. && husky install Frontend/.husky && cd Frontend/src/app/core-module && git config core.hooksPath ../../../.husky || true"
  },
  "private": false,
  "dependencies": {
    "@angular-slider/ngx-slider": "^2.0.3",
    "@angular/animations": "~13.3.12",
    "@angular/cdk": "~13.3.9",
    "@angular/common": "~13.3.12",
    "@angular/compiler": "~13.3.12",
    "@angular/core": "~13.3.12",
    "@angular/forms": "~13.3.12",
    "@angular/material": "13.3.9",
    "@angular/platform-browser": "~13.3.12",
    "@angular/platform-browser-dynamic": "~13.3.12",
    "@angular/router": "~13.3.12",
    "@ngx-translate/core": "^14.0.0",
    "@tinymce/tinymce-angular": "^4.2.4",
    "angular-resizable-element": "^3.4.0",
    "angularx-qrcode": "^13.0.0",
    "chart.js": "^2.7.2",
    "core-js": "^3.6.4",
    "jquery": "^3.4.1",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^1.0.0",
    "moment": "^2.24.0",
    "ng-lazyload-image": "^7.0.1",
    "ngx-monaco-editor": "^8.1.1",
    "rxjs": "^6.5.4",
    "tinymce": "^6.0.0",
    "tinymce-i18n": "^22.2.11",
    "tslib": "^2.0.0",
    "uuid": "^3.3.2",
    "webpack": "^5.75.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.4",
    "@angular-eslint/builder": "13.2.1",
    "@angular-eslint/eslint-plugin": "13.2.1",
    "@angular-eslint/eslint-plugin-template": "13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "13.2.1",
    "@angular/cli": "^13.3.4",
    "@angular/compiler-cli": "~13.3.9",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@playwright/test": "^1.27.1",
    "@types/core-js": "^2.5.2",
    "@types/jasmine": "~3.8.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^29.1.2",
    "@types/jquery": "^3.5.9",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.7",
    "@types/quill": "^1.3.10",
    "@types/tough-cookie": "^4.0.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "babel-jest": "^29.1.2",
    "babel-loader": "^8.0.6",
    "codelyzer": "^6.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "got": "^12.5.2",
    "husky": "^7.0.4",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jest": "^29.1.2",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^12.1.7",
    "ng-packagr": "^13.3.1",
    "prettier": "^2.5.1",
    "tough-cookie": "^4.1.2",
    "ts-node": "~10.9.1",
    "typedoc": "^0.16.9",
    "typescript": "~4.6.4"
  },
  "lint-staged": {
    "*.{js,css,md,ts,html,scss}": "prettier --write"
  }
}
